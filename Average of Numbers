#include<iostream>
using namespace std;

int main(){

    int n ;
    cout << "Enter n: ";
    cin >> n;
    int arr[n];

    cout << "Enter the elements in array: ";
    cout << "{";
    for(int i = 0;i<n;i++){
        cin >> arr[i];
    }
    cout << "}";
 float sum = 0;
 for( int i = 0 ; i<n ; i++)
 {
     sum = sum + arr[i];
 }
  float average ;
  average = sum/n;

  cout << "Average of the numbers : " << average << endl;
}
